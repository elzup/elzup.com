{
	"name": "elzup.com",
	"version": "1.0.1",
	"description": "elzup.com Web Site",
	"scripts": {
		"start": "react-scripts start",
		"build": "react-scripts build",
		"eject": "react-scripts eject",
		"precommit": "lint-staged",
		"deploy": "npm run build && rsync -rtvpl ./build/ sakura:~/docker/repos/elzup.com-v5/public/",
		"cypress:open": "cypress open",
		"prepare": "husky install"
	},
	"main": "index.js",
	"repository": {
		"type": "git",
		"url": "https://github.com/elzup/elzup.com"
	},
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/elzup/elzup.com/issues"
	},
	"homepage": "https://elzup.com",
	"dependencies": {
		"normalize.css": "^8.0.0",
		"react": "^17.0.0",
		"react-dom": "^17.0.0",
		"react-fontawesome": "^1.1.0",
		"react-lazyload": "^3.0.0",
		"react-router": "^5.2.0",
		"react-router-dom": "^5.2.0",
		"react-scripts": "^4.0.0",
		"react-tooltip": "^4.2.21",
		"styled-components": "^5.3.0"
	},
	"devDependencies": {
		"@babel/cli": "7.14.5",
		"@babel/preset-env": "7.14.7",
		"cypress": "^7.7.0",
		"flow-bin": "0.155.0",
		"font-awesome": "4.7.0",
		"husky": "^7.0.0",
		"jest-cli": "27.0.6",
		"jest-styled-components": "7.0.5",
		"lint-staged": "11.0.1",
		"node-noop": "1.0.0",
		"playwright": "1.12.3",
		"prettier": "2.3.2"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.js": [
			"prettier --use-tabs --no-semi --single-quote --trailing-comma es5 --write",
			"git add"
		]
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	}
}
